<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.orientacionvocacional.Profesiones">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:baselineAligned="false"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textView12"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:layout_width="300dp"
                    android:layout_height="178dp"
                    android:id="@+id/veterinario"
                    android:background="@mipmap/veterinario"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="false"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

                <ImageButton
                    android:layout_width="300dp"
                    android:layout_height="178dp"
                    android:id="@+id/bombero"
                    android:layout_weight="0.35"
                    android:background="@mipmap/bombero"
                    android:clickable="true"
                    android:focusable="false" />

                <ImageButton
                    android:layout_width="300dp"
                    android:layout_height="178dp"
                    android:id="@+id/medico"
                    android:layout_weight="0.35"
                    android:background="@mipmap/medico"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="300dp"
                    android:layout_height="178dp"
                    android:id="@+id/policia"
                    android:layout_weight="0.35"
                    android:background="@mipmap/policia"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="300dp"
                    android:layout_height="178dp"
                    android:id="@+id/ingeniero"
                    android:layout_weight="0.35"
                    android:background="@mipmap/ingeniero"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="300dp"
                    android:layout_height="178dp"
                    android:id="@+id/cantante"
                    android:layout_weight="0.35"
                    android:background="@mipmap/cantante1"
                    android:clickable="true" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</RelativeLayout>
